<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/menu_layoutRelativeLayout"
	android:layout_width="match_parent"
	android:layout_height="50dp"
	android:padding="13dp"
	android:orientation="horizontal">

	<ImageButton
		android:id="@+id/menu_layoutshareButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:paddingLeft="12dp"
		android:background="@drawable/baseline_share_24"/>

	<TextView
		android:id="@+id/menu_layoutTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="25sp"
		android:text="@string/app_name"
		android:layout_centerInParent="true"
		android:textColor="#FFFFFF"
		/>

    <ImageButton
        android:id="@+id/downloaded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/menu_option"
        android:layout_centerVertical="true"
        android:paddingEnd="15dp"
        android:background="@drawable/ic_file_download_black_24dp"
        >

    </ImageButton>

	<ImageButton
		android:id="@+id/menu_option"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:paddingEnd="12dp"
		android:layout_alignParentRight="true"
		android:paddingRight="12dp"
		android:onClick="popupMenuItem"
		android:background="@drawable/baseline_more_vert_24">

	</ImageButton>

</RelativeLayout>

