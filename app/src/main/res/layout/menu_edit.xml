<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_layoutRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="13dp"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/img_layoutImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:onClick="onbackpressimg"
        android:paddingLeft="12dp"
        android:background="@drawable/ic_arrow_back_black_24dp"/>

    <TextView
        android:id="@+id/edit_layoutTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="@string/app_name"
        android:layout_centerInParent="true"
        android:textColor="#FFFFFF"
        />

    <ImageButton
        android:id="@+id/edit_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingEnd="12dp"
        android:layout_alignParentRight="true"
        android:paddingRight="12dp"
        android:onClick="popupMenuItemImg"
        android:background="@drawable/ic_publish_black_24dp">

    </ImageButton>

</RelativeLayout>

